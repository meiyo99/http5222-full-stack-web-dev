extends layout

block main-content
  h1 Libraries
  each library in libraries
    -
      let libraryName = library.querySelector("name").textContent;
      let libraryId = library.getAttribute("id");
      let description = library.querySelector("description").textContent;
    div.library-item
      h2: a(href=`/library/${libraryId}`) #{libraryName}
      p #{description}