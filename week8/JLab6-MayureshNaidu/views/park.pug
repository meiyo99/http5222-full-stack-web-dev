extends layout

block main-content
  -
    let pName = park.querySelector("LocationName").textContent;
    let pAddr = park.querySelector("Address").textContent;
    let pPostCode = park.querySelector("PostalCode").textContent;
    let facilities = park.querySelectorAll("FacilityDisplayName");
  h1 #{pName}
  p Address: #{pAddr}
  p Postal Code: #{pPostCode}
  h2 Available facilities 
  ul 
    each f in facilities 
      li #{f.textContent}